<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
<Document>
  <Style id="linestyle_red">
    <LineStyle>
      <color>7fff0000</color>
      <width>4</width>
    </LineStyle>
  </Style>

  <Style id="linestyle_white">
    <LineStyle>
      <color>7fffffff</color>
      <width>4</width>
    </LineStyle>
  </Style>

  <Style id="linestyle_yellow">
    <LineStyle>
      <color>7fffff00</color>
      <width>4</width>
    </LineStyle>
  </Style>

  <Style id="linestyle_blue">
    <LineStyle>
      <color>7f0000ff</color>
      <width>4</width>
    </LineStyle>
  </Style>

  <% for sidewalk in @sidewalks %>
    <Placemark>
      <id><%= sidewalk.gid %></id>
      <description><%= sidewalk.gid %></description>
      <name><%= sidewalk.address %></name>
      <styleUrl><%= format_color(sidewalk) %></styleUrl>
      <%= raw(sidewalk.kml) %>
    </Placemark>
  <% end %>
</Document>
</kml>
