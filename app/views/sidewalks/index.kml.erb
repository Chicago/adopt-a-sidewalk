<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
<Document>
  <Style id="needs_help">
    <LineStyle>
      <width>4</width>
    </LineStyle>
    <PolyStyle>
      <color>7f0000ff</color>
    </PolyStyle>
  </Style>

  <Style id="unclear">
    <LineStyle>
      <width>4</width>
    </LineStyle>
    <PolyStyle>
      <color>7fffffff</color>
    </PolyStyle>
  </Style>

  <Style id="adopted">
    <LineStyle>
      <width>4</width>
    </LineStyle>
    <PolyStyle>
      <color>7f00ffff</color>
    </PolyStyle>
  </Style>

  <Style id="cleared">
    <LineStyle>
      <width>4</width>
    </LineStyle>
    <PolyStyle>
      <color>7fff0000</color>
    </PolyStyle>
  </Style>

  <% for sidewalk in @sidewalks %>
    <Placemark>
      <id><%= sidewalk.gid %></id>
      <description><%= sidewalk.gid %></description>
      <name><%= sidewalk.address %></name>
      <styleUrl><%= format_color(sidewalk) %></styleUrl>
      <%= raw(sidewalk.kml) %>
    </Placemark>
  <% end %>
</Document>
</kml>
