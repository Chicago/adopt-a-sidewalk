= form_for :user, :url => user_session_path, :html => {:id => "sign_in_form_main"} do |f|
  %ul.signin
    %li
      = f.label :email, t("labels.email")
      = f.text_field :email
    %li  
      = f.label :password, t("labels.password")
      = f.password_field :password
    %li.remember
      = f.check_box :remember, :checked => true
      = t("labels.remember_me_short")
    %li.button
      = f.submit t("buttons.sign_in")

