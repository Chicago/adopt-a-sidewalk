= form_for :user, :html => {:id => "sign_up_form"} do |f|
  %h2= t "titles.register_now"

  = f.label :first_name, t("labels.first_name")
  %em= t("captions.public")
  = f.text_field :first_name

  = f.label :last_name, t("labels.last_name")
  %em= t("captions.public")
  = f.text_field :last_name

  =# f.label "organization", t("labels.organization"), :id => "user_organization_label"
  %em=# t("captions.public")
  =# f.text_field "organization"
  
  = f.label :email, t("labels.email")#, :id => "user_email_label"
  = f.text_field :email, :value => params[:user] ? params[:user][:email] : nil
  
  = f.label "password", t("labels.password"), :id => "user_password_label"
  = f.password_field "password"
  
  = f.submit t("buttons.register")

  %p= t("defaults.tos", :tos => link_to(t("links.terms"), tos_path, :id => "tos_link")).html_safe
