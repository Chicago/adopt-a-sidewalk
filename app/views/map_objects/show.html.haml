%h1.actions_label
  = 'Can you take care of this sidewalk?'

%h2.address
  = @sidewalk.address

%ul.actions_menu
  %li= link_to 'Yes, I will adopt this sidewalk', '#', :id => 'adopt_link'
  %li= link_to 'No, I will need help keeping this sidewalk clean', '#', :id => 'need_help_link'
  %li= link_to 'Need supplies or have some to share?', '#', :id => 'need_supplies_link'

- if @map_object
  %h1= 'Current status of the sidewalk'
  %p= "Adopted by: #{@map_object.user.fullname}"
  %p= "Cleared: #{yesno(@map_object.cleared)}"
  %p= "Need Help: #{yesno(@map_object.need_help)}"